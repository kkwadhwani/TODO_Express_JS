  <body>
      <div class="container" >
          <form action="/done"  method="POST" style="float:right; border:1px solid grey; border-radius:10px; margin:15px 5px">
        <div class="mb-3 m-3">
            <label for="exampleFormControlInput1" class="form-label">Task in few words</label>
            <input type="text" name ="task" class="form-control" id="exampleFormControlInput1" placeholder="What task you want do?">
          </div>
          <div class="mb-3 m-3">
            <label for="exampleFormControlTextarea1" class="form-label">Explain Task</label>
            <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"></textarea>
          </div>
          <div class="d-grid gap-2 col-6 mx-auto">
            <button class="btn btn-primary mb-2" type="submit">Submit</button>
            
          </div>
        </form>


        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Task</th>
                <th scope="col">Description</th>
                <th scope="col">Edit/Delete</th>
              </tr>
            </thead>
            <tbody>
                    <% for(let i=0 ; i<allTasks.length; i++) { %>

                        <tr>
                            <th scope="row"> <%= i+1 %></th>
                            <td><%= allTasks[i].task %></td>
                            <td><%= allTasks[i].description %></td>
                            <td style="display:inline" >
                                    <a href="/edit/<%= allTasks[i]._id %>" style="border: 1px solid black; margin:10px 10px; padding:5px 13px;background-color: green; color:white">Edit</a>
                                   <form action="/?id=<%= allTasks[i]._id %>&_method=DELETE" method="POST" style="display:inline">
                                       <input type="submit" value="Delete" style="background-color: red; color:white">
                                   </form>
            
                            </td>
                          </tr>



                        <% } %>

            
            </tbody>
          </table>
    
      </div>
    










